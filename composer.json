{
	"name": "luizfernandow/codility",
    "description": "Solutions from Codility lessons that I did.",
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
		"phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "Codility\\": "src/"
        }
    },
    "scripts": {
        "format": [
            "vendor/bin/php-cs-fixer fix"
        ], 
        "test": [
            "vendor/bin/phpunit tests"
        ],
        "testdox": [
            "vendor/bin/phpunit --testdox tests"
        ]
    }
}
